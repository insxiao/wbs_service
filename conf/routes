# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET           /                     controllers.HomeController.index
GET           /user                 controllers.UserController.list
GET           /user/:id             controllers.UserController.find(id: Long)
POST          /user                 controllers.UserController.create
POST          /user/register        controllers.UserController.register
DELETE        /user/:id             controllers.UserController.delete(id: Long)
GET           /test                 controllers.HomeController.testAuthRefiner
GET           /testUser             controllers.HomeController.testUser

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
